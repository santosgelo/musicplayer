<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <ImageView
            android:id="@+id/img_disc_image"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/default_album_art"
            android:background="#0054ff29"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/music_controller"
            />

        <RelativeLayout
            android:id="@+id/relative_layout_disc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="visible"
                android:textAlignment="textStart"
                android:maxLines="1"
                android:gravity="start" />

            <TextView
                android:id="@+id/txt_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_song_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="visible"
                android:textAlignment="textStart"
                android:maxLines="1"
                android:gravity="start" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>